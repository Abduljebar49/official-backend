generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Request {
  id          Int      @id @default(autoincrement())
  itemName    String
  brandName   String
  amount      Int
  groupId     String
  isRequested Boolean  @default(false)
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
  createdAt   DateTime @default(now())
  isExpired   Boolean  @default(false)
}

model User {
  id                Int                 @id @default(autoincrement())
  email             String              @unique
  password          String
  fullName          String
  userType          UserType
  requests          Request[]
  requestBids       RequestBid[]
  link              Link[]
  passwordResetLink PasswordResetLink[]
}

model RequestBid {
  id        Int      @id @default(autoincrement())
  itemName  String
  brandName String
  groupId   String
  amount    Int
  price     Int
  bidAmount Int
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  createdAt DateTime @default(now())
  isExpired Boolean  @default(false)
}

model Link {
  id     Int      @id @default(autoincrement())
  userId Int
  token  String   @unique
  expiry DateTime
  user   User     @relation(fields: [userId], references: [id])
}

model PasswordResetLink {
  id     Int      @id @default(autoincrement())
  code   String
  expiry DateTime
  userId Int
  user   User     @relation(fields: [userId], references: [id])
}

enum UserType {
  ADMIN
  IMPORTER
  DISTRIBUTOR
  SALESPERSON
}
